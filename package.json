{
  "name": "@pegasusheavy/tailswatch",
  "version": "1.0.0",
  "description": "Customizable Tailwind CSS 4+ themes for import into other applications. Bootswatch-inspired themes, Material Design themes, and programming language-inspired themes.",
  "author": "Pegasus Heavy Industries LLC",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.css",
  "exports": {
    ".": "./dist/index.css",
    "./themes/*": "./dist/themes/*.css",
    "./base": "./dist/base/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "pnpm run compile:scss && tailwindcss -i ./build/index.css -o ./dist/index.css --watch",
    "build": "pnpm run clean && pnpm run compile:scss && pnpm run build:css",
    "compile:scss": "sass src:build --style=expanded --no-source-map",
    "compile:scss:watch": "sass src:build --style=expanded --no-source-map --watch",
    "build:css": "pnpm run build:base && pnpm run build:themes && pnpm run build:main",
    "build:main": "tailwindcss -i ./build/index.css -o ./dist/index.css --minify",
    "build:base": "tailwindcss -i ./build/base/index.css -o ./dist/base/index.css --minify",
    "build:themes": "node scripts/build-themes.js",
    "clean": "rm -rf dist build",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "sass": "^1.83.0",
    "tailwindcss": "^4.0.0"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "tailwind-css",
    "tailwindcss-themes",
    "themes",
    "theming",
    "css",
    "scss",
    "sass",
    "design-system",
    "design-tokens",
    "customizable",
    "bootswatch",
    "material-design",
    "material-ui",
    "dark-mode",
    "dark-theme",
    "light-theme",
    "color-scheme",
    "css-variables",
    "css-custom-properties",
    "styling",
    "ui-themes",
    "frontend",
    "web-design"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pegasusheavy/tailswatch.git"
  },
  "homepage": "https://pegasusheavy.github.io/tailswatch",
  "bugs": {
    "url": "https://github.com/pegasusheavy/tailswatch/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": [
    "**/*.css"
  ]
}
